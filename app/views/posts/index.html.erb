<h1>ツイート一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>

    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to 'ツイートを編集する', edit_post_path(post.id) %></td>
    <td><%= link_to 'ツイ消しする', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくツイートする', new_post_path %>
